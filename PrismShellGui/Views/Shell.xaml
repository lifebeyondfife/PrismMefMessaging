<Window x:Class="PrismShellGui.Shell"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:prism="http://www.codeplex.com/prism"
		Title="Prism Mef Messaging" Height="450" Width="650" MinHeight="450" MinWidth="650" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<GroupBox Header="Module A" HorizontalAlignment="Stretch" Margin="6" VerticalAlignment="Stretch">
			<ContentControl prism:RegionManager.RegionName="RegionA" />
		</GroupBox>
		<GroupBox Grid.Column="1" Header="Module B" HorizontalAlignment="Stretch" Margin="6" VerticalAlignment="Stretch">
			<ContentControl prism:RegionManager.RegionName="RegionB" />
		</GroupBox>
	</Grid>
</Window>
